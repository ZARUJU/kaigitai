{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Meeting basic register form",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "main": {
        "type": "object",
        "properties": {
          "group_id": { "type": "string", "minLength": 1 },
          "num": { "type": "integer" }
        },
        "required": ["group_id", "num"],
        "additionalProperties": false
      },
      "sub": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "group_id": { "type": "string", "minLength": 1 },
            "num": { "type": "integer" }
          },
          "required": ["group_id", "num"],
          "additionalProperties": false
        }
      },
      "date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "holding": {
        "type": "string",
        "enum": ["onsite", "online", "hybrid", "document"]
      },
      "start_time": {
        "type": ["string", "null"],
        "pattern": "^\\d{2}:\\d{2}$"
      },
      "end_time": {
        "type": ["string", "null"],
        "pattern": "^\\d{2}:\\d{2}$"
      },
      "agenda": {
        "type": "array",
        "items": { "type": "string" }
      },
      "attendee": {
        "type": "array",
        "items": { "type": "string" }
      },
      "sources": {
        "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": { "type": "string", "format": "uri" },
          "source_type": {
            "type": "string",
            "enum": ["meeting_page", "minutes", "other"]
          },
          "title": { "type": "string" }
        },
        "required": ["url"],
        "additionalProperties": false
        }
      },
      "materials": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "url": { "type": "string", "format": "uri" },
            "title": { "type": "string" }
          },
          "required": ["url"],
          "additionalProperties": false
        }
      }
    },
    "required": ["main", "date", "holding"],
    "additionalProperties": false
  }
}
